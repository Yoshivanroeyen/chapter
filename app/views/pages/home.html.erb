<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
  <div class="banner-content">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <h1>Start your adventure!</h1>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-6">
          <div class="input-group">
            <form action="/books/search" method="get">
            <span class="input-group-btn">
              <%= link_to "Go !", search_books_path, {class: "btn btn-default", type: 'button'} %>
            </span>
            <div class="aa-input-container" id="aa-input-container">
                <input type="search" name="query", id="aa-search-input" class="aa-input-search, form-control" placeholder="Search for title, author, category, ..." name="search" autocomplete="on" />
            </div>
            </form>
          </div><!-- /input-group -->
        </div><!-- /.col-lg-6 -->
      </div>
    </div>
</div>
 <div class="container">
  <div class="row">
   <% Book.all.each do |book| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/random');">
        <div class="card-category"><%= book.title %></div>
        <div class="card-description">
          <h2><%= book.description %></h2>
          <p><%= book.genre %></p>
        </div>
        <a class="card-link" href="#" ></a>
      </div>
    </div>
    <% end %>
  </div>
</div>



