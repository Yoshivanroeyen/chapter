<div id="chapter<%= episode.number %>" class="modal fade" role="dialog">
  <div class="padding-top-90"></div>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Order summary</h4>
      </div>
      <div class="modal-body">
        <div class="panel panel-default">
          <!-- Table -->
          <table class="table">
            <tr>
              <th>Chapter</th>
              <th>Title</th>
              <th>Price</th>
            </tr>
            <tr>
              <td> <%= episode.number %></td>
              <td> <%= episode.title %></td>
              <td> <%= episode.price %> %></td>
            </tr>
          </table>
        </div>
        <% if 100 >= episode.price %>
          <%= form_tag book_episode_transactions_path(@book, episode) do %>
            <%= hidden_field_tag 'episode', :episode %>
            <%= submit_tag 'Buy Now', class: 'btn btn-primary' %>
          <% end %>
          <% episode.price %>
        <% else %>
          <%= link_to "Top up", :back, class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
