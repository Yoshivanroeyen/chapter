<div id="Book<%= book.id %>" class="modal fade" role="dialog">
  <div class="padding-top-90"></div>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Order summary</h4>
      </div>
      <div class="modal-body">
        <div class="panel panel-default">
          <!-- Table -->
        <% if current_user %>
        <%= link_to("Download previously purchased chapters", download_owned_book_book_path(book), action: :download_owned_book, class: "btn btn-primary", style: "margin-bottom:10px; font-weight: lighter;") unless current_user.owned_episodes(book).empty? %>
        <div> <%= link_to("Download and buy #{current_user.not_owned_episodes(book).count} remaining chapter(s) (â‚¬ #{current_user.price(book)})",  download_book_path(book), :action => :download_book, class: "btn btn-danger", style:"font-weight: lighter;") unless current_user.not_owned_episodes(book).empty? %>
        </div>
        <% else %>
           <%= link_to "Log in", new_registration_session_path, class: 'btn btn-primary' %>
        <% end %>
        </div>
        <!-- <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div> -->
    </div>
  </div>
</div>
</div>
