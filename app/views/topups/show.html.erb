<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @topup.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <p>Some awesome description of our amazing topup.</p>
      <p>Amount: <%= humanized_money_with_symbol(@topup.price) %></p>
      <%= form_tag orders_path do %>
        <%= hidden_field_tag 'topup_id', @topup.id %>
        <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
