<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="form-post">
        <%= simple_form_for current_user, url: users_path do |f| %>
        <!-- simple_form_for(@admin, :url => users_path) -->
        <div class="form-inputs">
          <%= f.input :picture, :label => "profile picture"  %>
          <%= f.input :picture_cache, as: :hidden %>
          <%= f.input :description  %>
          <%= f.input :fav_genre,:label => "Favorite genre"%>
          <%= f.input :f_name, :label => "First name" %>
          <%= f.input :l_name, :label => "Last name"%>
          <%= f.submit  class:"btn btn-danger"%>

        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>




